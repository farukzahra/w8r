<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>es_ES</supported-locale>
			<supported-locale>it_IT</supported-locale>
			<supported-locale>fr_FR</supported-locale>
			<supported-locale>de_DE</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.com.cardapio.resources.cm</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>br.com.cardapio.resources.cm</message-bundle>
	</application>

	<lifecycle>
		<phase-listener>br.com.cardapio.seguranca.AuthorizationListener</phase-listener>
	</lifecycle>

</faces-config>
