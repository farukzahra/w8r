<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Cardapio" >
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://www.w8r.com.br:3306/dbcardapio" /> 
			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dbcardapio" /> -->
			<property name="javax.persistence.jdbc.user" value="dbcardapio" />
			<property name="javax.persistence.jdbc.password" value="linux123" />
			<property name="eclipselink.target-database" value="MySQL"/>
			<property name="eclipselink.cache.shared.default" value="false"/>
			
			
			<!-- P/ VER SQLS EXECUTADOS PELO JPA   
			<property name="eclipselink.logging.level.sql" value="FINE"/>
			<property name="eclipselink.logging.parameters" value="true"/>
			-->
		</properties>
	</persistence-unit>
</persistence>